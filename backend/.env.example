# Application
APP_NAME=DuckCoin Presale API
DEBUG=true
API_V1_PREFIX=/api/v1

# Solana Configuration (for on-chain credit_allocation calls)
SOLANA_RPC_URL=https://api.devnet.solana.com
PRESALE_PROGRAM_ID=Fg6PaFpoGXkYsidMpWTK6W2BeZ7FEfcYkg476zPFsLnS
PRESALE_TOKEN_MINT=TokenMintAddressHere

# Admin keypair (KEEP SECRET - Base58 encoded private key)
# This keypair must match the admin stored in the on-chain PresaleConfig
ADMIN_PRIVATE_KEY=YourBase58EncodedAdminPrivateKeyHere

# Presale start date (ISO format) — day 1 of the tokenomics schedule
PRESALE_START_DATE=2026-03-01

# NOWPayments Configuration
# Get your API key and IPN secret from https://account.nowpayments.io/
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_IPN_SECRET=your-nowpayments-ipn-secret
NOWPAYMENTS_API_URL=https://api.nowpayments.io/v1
NOWPAYMENTS_SANDBOX=false

# Database (Tortoise ORM format — use postgres:// not postgresql+asyncpg://)
DATABASE_URL=postgres://user:password@localhost:5432/duckcoin

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
